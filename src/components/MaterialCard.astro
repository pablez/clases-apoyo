---
const { material } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
  <div class="relative h-48 bg-gray-200">
    <img
      src={material.imagen_url}
      alt={material.titulo}
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute top-3 right-3">
      <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
        {material.materia}
      </span>
    </div>
  </div>
  
  <div class="p-4">
    <h3 class="font-bold text-lg mb-2 line-clamp-2">{material.titulo}</h3>
    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{material.descripcion}</p>
    
    <a
      href={material.url_recurso}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium text-sm"
    >
      Ver recurso
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
  </div>
</article>
